<div class="manga-detail">
<h1><%= @manga.title %></h1>
<h6>Author: <%= @manga.author %></h6>
<img src=<%= @manga.image %>/>

<p><a href="<%= @manga.link %>">Go to manga link</a></p>

<%= form_tag(show_url, :method => "get") do %>  
  <div class="input-group-monitor">  
    <%= search_field_tag :email, params[:email], placeholder: "Add your email", class: "form-control" %>  
    <div class="input-group-btn">  
      <%= button_tag "Monitor",:name => nil %>  
    </div>  
  </div>  
<% end %>

<% if @user %>
  <% if @already_exist %>
    <h3>
      <%= @user.email %> already monitoring <%= @manga.title %>
    </h3>
  <% else %>
    <h3>
        <%= @user.email %> starts monitoring <%= @manga.title %>
    </h3>
  <% end %>
<% end %>
</div>